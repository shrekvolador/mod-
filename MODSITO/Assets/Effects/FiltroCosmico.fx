sampler uImage0 : register(s0);float globalTime;float uIntensity;float2 uScreenResolution;float4x4 uWorldViewProjection;float2 uOffset;float4 MainPS(float2 uv : TEXCOORD0) : COLOR0{    // Creamos un efecto de estrellas/nebulosa simple    float2 st = uv + uOffset;    float color = 0.5 + 0.5 * cos(globalTime + st.xyx + float3(0,2,4));        // Multiplicamos por la intensidad para que desaparezca suavemente    return float4(color * 0.1, color * 0.1, color * 0.3, 1.0) * uIntensity;}technique Technique1{    pass FiltroCosmicoPass    {        PixelShader = compile ps_3_0 MainPS();    }}